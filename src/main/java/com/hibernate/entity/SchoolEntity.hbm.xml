<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.hibernate.entity.SchoolEntity" table="school" schema="hibernate">
        <id name="id">
            <column name="id" sql-type="int(38)"/>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar(80)" length="80" not-null="true"/>
        </property>
        <property name="address">
            <column name="address" sql-type="varchar(80)" length="80" not-null="true"/>
        </property>
        <property name="age">
            <column name="age" sql-type="varchar(80)" length="80" not-null="true"/>
        </property>
        <property name="area">
            <column name="area" sql-type="int(100)" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>